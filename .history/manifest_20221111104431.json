{
    "manifest_version": 3,
    "name": "GreenCart",
    "version": "1.0",
    "icon": "./images/leaf.png",
    "description": "A simple chrome extension for managing your carbon footprint.",
    "browser_action": {
        "default_icon": "./images/leaf.png",
        "default_popup": "./popup.html"
    },
    "background": {
        "scripts": ["background.js"]
    },
    "permissions": [
        "tabs",
        "storage",
        "webRequest",
        "webRequestBlocking"
    ],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ]


}